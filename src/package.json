{
  "name": "hamonize-wizard",
  "version": "1.0.0",
  "description": "Hamonikr OS Manager for HamoniKR",
  "homepage": "https://hamonikr.org/",
  "author": "HamoniKR Team <hamonikr-packages@googlegroups.com>",
  "license": "Apache-2.0",
  "readme": "readme.txt",
  "main": "main.js",
  "scripts": {
    "cache-clean": "rm -rf ~/.electron",
    "start": "electron main.js --no-sandbox",
    "test": "electron ./testJquery/test.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:linux": "electron-builder --linux --x64",
    "build:win64": "electron-builder --win  --x64",
    "clean": "rm -fr node_modules/ ./dist"
  },
  "files": [
    "*.js",
    "license.txt",
    "readme.txt",
    "public",
    "bin",
    "shell"
  ],
  "dependencies": {
    "acron": "^1.0.5",
    "app-root-path": "^3.0.0",
    "axios": "^0.21.1",
    "commander": "^9.0.0",
    "compass": "^0.1.1",
    "date-utils": "^1.2.21",
    "dialogs": "^2.0.1",
    "easytimer.js": "^4.1.1",
    "electron-alert": "^0.1.11",
    "electron-args": "^0.1.0",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-ipc-promise": "^0.1.7",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^3.0.5",
    "electron-modal": "^1.0.0",
    "electron-packager": "^14.2.0",
    "electron-sudo": "^4.0.12",
    "electron-window-manager": "^1.0.6",
    "electron-window-state": "^5.0.3",
    "es6-promise": "^4.2.8",
    "es6-promise-polyfill": "^1.2.0",
    "es6-promise-pool": "^2.5.0",
    "express": "^4.17.1",
    "express-ws": "^2.0.0",
    "findit": "^2.0.0",
    "fs": "0.0.1-security",
    "inquirer": "^8.2.0",
    "ip": "^1.1.5",
    "line-reader": "^0.4.0",
    "md5": "^2.3.0",
    "mkdirp": "^1.0.4",
    "moment": "^2.24.0",
    "node-machine-id": "^1.1.12",
    "node-schedule": "^2.1.0",
    "open": "^7.0.3",
    "os": "^0.1.1",
    "ping": "^0.2.3",
    "ping-wrapper": "0.0.3",
    "react-countdown-circle-timer": "^1.1.0",
    "read-last-lines": "^1.7.2",
    "sudo-block": "^3.0.0",
    "sudo-prompt": "^9.1.1",
    "systeminformation": "^5.3.2",
    "tail-file": "^1.4.15",
    "time-counter": "^1.0.0",
    "time-stamp": "^2.2.0",
    "tiny-timer": "^1.4.0",
    "uniqid": "^5.4.0",
    "unirest": "^0.6.0",
    "url": "^0.11.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "repository": {
    "type": "git",
    "url": "http://pms.invesume.com:7990/scm/sgb/sgb-work.git"
  },
  "keywords": [
    "hamonize"
  ],
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.3.2",
    "pkg": "^4.4.0"
  },
  "build": {
    "icon": "./build/icons",
    "productName": "hamonize-wizard",
    "appId": "hamonize.wizard.support",
    "asar": false,
    "protocols": {
      "name": "hamonize-wizard",
      "schemes": [
        "hamonize-wizard"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "res/bin/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "res/bin/iconshm/",
      "desktop": {
        "Encoding": "UTF-8"
      }
    },
    "deb": {
      "afterInstall": "res/linux/after-install.tpl",
      "afterRemove": "res/linux/after-remove.tpl"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  }
}
